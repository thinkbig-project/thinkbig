generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  name      String?
  email     String    @unique
  image     String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  issues    Issue[]
  id        String    @id @map("_id")
}

model Issue {
  id       String     @id @map("_id")
  userId   String
  codeHelp CodeHelp[]
  user     User       @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model CodeHelp {
  id         String   @id @map("_id")
  issueId    String
  type       String
  tags       String[]
  repository String
  files      String
  expected   String
  unexpected String
  reproduce  String
  attempted  String
  issue      Issue    @relation(fields: [issueId], references: [id])
}

